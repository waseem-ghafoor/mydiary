<!-- Naser -->
<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_entry_path(@entry) %> |
<%= link_to 'Back', entries_path %> |
<%= link_to 'View All', entries_view_all_path %>

<p>
  <strong>Title:</strong>
  <%= @entry.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @entry.content %>
</p>
<%= image_tag @entry.photo.url if @entry.photo.present? %>

<h2>Comments</h2>
<% @entry.comments.each_with_index do |comment, index| %>
  <p>
    <strong># <%= index +1 %></strong>
  </p>
  <p>
    <strong>Name:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>


<h2>Add a comment:</h2>
<%= render 'comments/form' %>